<%- include("../partials/header.ejs",{page:"Login"}); %>

    <body class="container">
      <div class="text-center alert alert-<%= (()=> {
        if (alart_err.length) {return "danger"} else if(succ.length) {return "success" } })() %> mt-3 <%= (()=>
            {
            if (alart_err.length || succ.length) {return " d-block"} else {return " d-none" } })() %> mb-0"
            role="alert">
            <%= (()=> {
                if (alart_err.length) {return alart_err}
                else {return succ[0]}
            })() %>
    </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Do you want your password to be recovered?</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form action="/password_recovery" method="POST">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input type="email" name="emailaddress" class="form-control border" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your  email">
                     
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" name="emailPass" class="form-control border" id="exampleInputPassword1" placeholder="Password">
                       
                    </div>
                    <button type="submit"  id="pass_recovery" class="btn btn-primary">Send</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <%- include("../partials/form.ejs",{page:"Login"}); %>
        <script src="/javascripts/form_validation.js"></script>
    </body>


    