<%- include("./partials/header.ejs",{page:"allusers"}); %>
    <%- include("./partials/slide_bar.ejs",{page:"allusers"}); %>


        <div id="navbar-wrapper">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a href="#" class="navbar-brand" id="sidebar-toggle"><i class="fa fa-bars"></i></a>
                    </div>
                </div>
            </nav>
        </div>

        <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <h4>Do you want to delete this user?</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="close" class="btn btn-default" data-dismiss="modal">NO</button>
                        <button type="button" id="delete" class="btn btn-primary del">YES</button>
                    </div>
                </div>
            </div>
        </div>

        <section id="content-wrapper">
            <div class="container">
                <% if (!users.length) { %>

                    <h2 class="text-center mt-5">There is no user</h2>
                <% } else { %>
                    <div class="row">
                        <% for( let i=0; i < users.length; i++ ) { %>
                            <div class="col-12 col-sm-8  col-md-6 col-lg-4 mt-2">
                                <div class="card">
                                    <img class="card-img" src=<%= !users[i].avatar?"/default_Img/1.png":`/images/avatars/${users[i].avatar}` %> alt="">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <%= users[i].username %>
                                        </h4>
                                        <div>
                                            <i class="fa fa-user text-info"></i>
                                        <%= users[i].firstname %> <%= users[i].lastname %>
                                        </div>
                                        
                                        <div>
                                            <i class="fa fa-pencil text-info"></i>
                                            <%= users[i].role %>
                                        </div>
                                        <div>
                                            <i class="fa fa-transgender text-info"></i>
                                            <%= users[i].gender %>
                                        </div>
                                        <div>
                                            <i class="fa fa-at text-info"></i>
                                            <%= users[i].email %>
                                        </div>
                                        <div>
                                            <i class="fa fa-phone text-info"></i>
                                        <%= users[i].mobile %>
                                        </div>
    
                                            <span><button type="submit" id="restpass" userId="<%= users[i]._id %>"  class="btn btn-info text-white mt-2">Reset Password</button></span><span><a
                                                    class="btn btn-danger ml-1 mt-2 text-white delbtn" id="<%= users[i]._id %>"  data-toggle="modal"
                                                    data-target="#basicModal"><i class="fa fa-trash"
                                                        aria-hidden="true"></i></a></span>
    
                                    </div>
                                    <div
                                        class="card-footer text-muted d-flex justify-content-between bg-transparent border-top-1">
                                        <div class="views text-center">Registerd in 
                                            <%= users[i].createdAt.getFullYear() %>/<%= users[i].createdAt.getMonth()
                                                    %>/<%= users[i].createdAt.getDate() %> at
                                                        <%= users[i].createdAt.getHours() %>:<%=
                                                                users[i].createdAt.getMinutes() %>:<%=
                                                                    users[i].createdAt.getSeconds() %>
                                        </div>
    
                                    </div>
                                </div>
                            </div>
                            <% } %>
    
                    </div>
                    <%- include("./partials/pagination.ejs",{pagename:"allusers"}); %>
                <% } %>
            </div>
        </section>

        </div>

        <script src="/javascripts/allusers.js"></script>
        </body>

        </html>